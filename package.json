{
  "name": "vehiclelab",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w @app/web",
    "dev:api": "node -e \"console.log('API served via Next.js route handlers');\"",
    "dev": "npm-run-all -p dev:web dev:api",
    "build": "npm run build -w @app/web",
    "start": "npm run start -w @app/web",
    "db:generate": "npm run db:generate -w @app/web",
    "db:push": "npm run db:push -w @app/web",
    "db:setup": "npm-run-all -s db:generate db:push"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
